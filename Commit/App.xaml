<Application
    x:Class="Commit.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Commit"
    RequestedTheme="Dark">

    <Application.Resources>
        <SolidColorBrush x:Key="AppBackgroundThemeBrush" Color="#FF272b46"/>

        <SolidColorBrush x:Key="TextBoxBackgroundThemeBrush" Color="Transparent"/>
        <SolidColorBrush x:Key="TextBoxFocusedBackgroundThemeBrush" Color="Transparent"/>
        <SolidColorBrush x:Key="TextBoxPlaceholderTextThemeBrush" Color="#70000000"/>

        <SolidColorBrush x:Key="KeepNoteDefaultBrush" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="KeepNoteRedBrush" Color="#FFF56545"/>
        <SolidColorBrush x:Key="KeepNoteOrangeBrush" Color="#FFFFBB22"/>
        <SolidColorBrush x:Key="KeepNoteYellowBrush" Color="#FFEEEE22"/>
        <SolidColorBrush x:Key="KeepNoteGreenBrush" Color="#FFBBE535"/>
        <SolidColorBrush x:Key="KeepNoteTealBrush" Color="#FF77DDBB"/>
        <SolidColorBrush x:Key="KeepNoteBlueBrush" Color="#FF66CCDD"/>
        <SolidColorBrush x:Key="KeepNoteGrayBrush" Color="#FFB5C5C5"/>
    </Application.Resources>
</Application>